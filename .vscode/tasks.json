{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "clear": true,
        "focus": true,
        "showReuseMessage": false,
        "reveal": "silent",
    },
    "type": "shell",
    "problemMatcher": [],
    "tasks": [
        {
            "label": "lint",
            "command": "bash run.sh lint",
            "presentation": {
                "group": "check"
            }
        },
        {
            "label": "test",
            "command": "bash run.sh test",
            "presentation": {
                "group": "check"
            }
        },
        {
            "label": "all checks",
            "dependsOn": [
                "test",
                "lint"
            ],
        },
        {
            "label": "lint sql",
            "command": "bash run.sh lint:sql ${relativeFile}",
        },
        {
            "label": "format sql",
            "command": "bash run.sh lint:sql:fix ${relativeFile}",
            "presentation": {
                "close": true,
            }
        },
    ],
    "inputs": [
        {
          "id": "string",
          "description": "text input",
          "type": "promptString",
          "default": ""
          // type specific configuration attributes
        },
        {
            "type":
            "pickString",
            "id": "runArgs",
            "description": "run.sh function to execute",
            "options": [
              "lint",
              "lint:sql",
              "sql",
            ],
            "default": "component"
        },
    ]
}
