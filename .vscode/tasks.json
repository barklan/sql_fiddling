{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "clear": true,
        "focus": true,
        "showReuseMessage": false,
        "reveal": "silent",
    },
    "type": "shell",
    "problemMatcher": [],
    "tasks": [
        {
            "label": "lint",
            "command": "./run.sh lint",
        },
        {
            "label": "test",
            "command": "bash run.sh test",
            "presentation": {
                "reveal": "always",
                "focus": true,
            },
        },
        {
            "label": "all checks",
            "dependsOn": [
                "test",
                "lint"
            ],
        },
        {
            "label": "format sql",
            "command": "bash run.sh lint:sql:fix ${relativeFile}",
            "presentation": {
                "close": true,
            }
        },
    ],
}
